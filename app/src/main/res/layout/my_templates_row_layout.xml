<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    >

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cardwrap"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/collectionName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#6b6b6b"
        app:contentPadding="8dp"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/chimney"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iconimageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_edit"
        app:layout_constraintBottom_toBottomOf="@+id/collectionName"
        app:layout_constraintEnd_toStartOf="@+id/collectionName"
        app:layout_constraintTop_toTopOf="@+id/collectionName" />

    <TextView
        android:id="@+id/collectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="My Creations"
        android:textColor="#6b6b6b"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cardwrap"
        app:layout_constraintStart_toStartOf="@+id/cardwrap"
        app:layout_constraintTop_toBottomOf="@+id/cardwrap" />


</androidx.constraintlayout.widget.ConstraintLayout>