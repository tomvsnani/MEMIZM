<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"

    >

    <ImageView
        android:id="@+id/cartmenuitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_add_alert_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cartitemNumberIndicatormenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/circlewrapdrawable"
        android:gravity="center"
        android:textColor="#fff"
        android:visibility="gone"
        app:layout_anchor="@+id/cartmenuitem"
        app:layout_anchorGravity="top|center"
        app:layout_constraintBottom_toBottomOf="@+id/cartmenuitem"
        app:layout_constraintStart_toEndOf="@+id/cartmenuitem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>